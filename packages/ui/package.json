{
  "name": "@ecency/ui",
  "private": false,
  "version": "1.0.0",
  "description": "Shared UI components for Ecency applications",
  "repository": {
    "type": "git",
    "url": "https://github.com/ecency/vision-next.git",
    "directory": "packages/ui"
  },
  "homepage": "https://github.com/ecency/vision-next/tree/develop/packages/ui",
  "bugs": {
    "url": "https://github.com/ecency/vision-next/issues"
  },
  "type": "module",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "default": "./dist/index.mjs"
    },
    "./styles": "./dist/styles.css"
  },
  "sideEffects": [
    "*.css"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint .",
    "test": "vitest run",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18"
  },
  "dependencies": {
    "clsx": "^2.1.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "eslint": "^9.21.0",
    "jsdom": "^26.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tsup": "^8",
    "typescript": "^5.6",
    "vitest": "^2.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
