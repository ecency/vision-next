{
  "name": "@ecency/renderer",
  "version": "1.3.2",
  "description": "React components for rendering Hive posts using Ecency extensions",
  "type": "module",
  "files": ["dist", "README.md"],
  "main": "./dist/ecency-renderer.cjs",
  "module": "./dist/ecency-renderer.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "./style.css": {
      "import": "./dist/style.css",
      "require": "./dist/style.css"
    },
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/ecency-renderer.es.js",
      "import": "./dist/ecency-renderer.es.js",
      "require": "./dist/ecency-renderer.cjs"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "test": "vitest run",
    "watch": "vitest",
    "coverage": "vitest run --coverage",
    "clean": "rimraf dist"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18"
  },
  "dependencies": {
    "medium-zoom": "^1.1.0"
  },
  "devDependencies": {
    "@ecency/render-helper": "^2.2.40",
    "@hiveio/dhive": "^1.3.2",
    "@testing-library/dom": "^8.11.3",
    "@testing-library/react": "14",
    "@types/node": "^22.10.5",
    "@types/react": "18",
    "@types/react-dom": "18",
    "@types/remarkable": "^2.0.8",
    "@types/xmldom": "^0.1.34",
    "@vitejs/plugin-react": "^1.0.7",
    "c8": "^7.11.0",
    "clsx": "^2.1.1",
    "prettier": "^3.4.2",
    "typescript": "^5.7.3",
    "vite": "5.4.6",
    "vite-plugin-dts": "^4.5.0",
    "vitest": "^2.1.8"
  },
  "browserslist": {
    "production": [">0.2%", "not dead", "not op_mini all"],
    "development": ["last 1 chrome version", "last 1 firefox version", "last 1 safari version"]
  }
}
