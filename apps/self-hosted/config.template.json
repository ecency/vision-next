{
  "version": 1,
  "configuration": {
    "instanceType": "ecency/blog",
    "general": {
      "theme": "system",
      "language": "en",
      "timezone": "UTC",
      "dateFormat": "YYYY-MM-DD",
      "timeFormat": "HH:mm:ss",
      "dateTimeFormat": "YYYY-MM-DD HH:mm:ss",
      "styles": {
        "background": "bg-gradient-to-br from-[#d8e5fa] to-[#fcfdfe]"
      }
    },
    "instanceConfiguration": {
      "username": "ecency",
      "meta": {
        "title": "My Blog",
        "description": "My Blog Description",
        "logo": "https://myblog.com/logo.png",
        "favicon": "https://myblog.com/favicon.ico",
        "keywords": "My Blog, My Blog Description"
      },
      "layout": {
        "listType": "list",
        "search": {
          "enabled": true
        },
        "sidebar": {
          "placement": "right",
          "followers": {
            "enabled": true
          },
          "following": {
            "enabled": true
          },
          "hiveInformation": {
            "enabled": true
          }
        }
      },
      "features": {
        "postsFilters": ["blog", "posts", "comments", "replies"],
        "communities": {
          "enabled": true
        },
        "likes": {
          "enabled": true
        },
        "wallet": {
          "enabled": true
        },
        "comments": {
          "enabled": true
        },
        "post": {
          "text2Speeech": {
            "enabled": true
          }
        }
      }
    }
  }
}
