{
  "name": "vision-next",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm --filter @ecency/web dev",
    "build": "pnpm --filter @ecency/web build",
    "start": "pnpm --filter @ecency/web start",
    "lint": "pnpm -r lint",
    "test": "pnpm --filter @ecency/web test",
    "typecheck": "tsc --build --verbose",
    "build:packages": "pnpm -F @ecency/sdk,@ecency/wallets build",
    "dev:sdk": "pnpm --filter @ecency/sdk dev",
    "dev:wallets": "pnpm --filter @ecency/wallets dev",
    "publish:sdk": "pnpm --filter @ecency/sdk publish --no-git-checks",
    "publish:wallets": "pnpm --filter @ecency/wallets publish --no-git-checks"
  },
  "packageManager": "pnpm@10.15.1",
  "devDependencies": {
    "@types/node": "^20",
    "eslint": "^8",
    "tsup": "^8.5.0",
    "typescript": "^5",
    "vitest": "^3.2.4"
  },
  "pnpm": {
    "overrides": {
      "typescript": "^5",
      "source-map": "^0.7.4",
      "@sentry/core": "^8.55.0",
      "@sentry/types": "^8.55.0",
      "@sentry/utils": "^8.55.0"
    },
    "ignoredBuiltDependencies": [
      "sharp"
    ],
    "onlyBuiltDependencies": [
      "@firebase/util",
      "@parcel/watcher",
      "@sentry/cli",
      "@sentry/profiling-node",
      "bigint-buffer",
      "core-js",
      "esbuild",
      "keccak",
      "protobufjs",
      "scryptlib",
      "secp256k1",
      "unrs-resolver"
    ]
  }
}
